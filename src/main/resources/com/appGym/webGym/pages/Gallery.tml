<!DOCTYPE html>
<html lang="en" t:type="layout"  t:title="Gallery" t:pagetitle="Gallery" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
   
    
    <script>
    $(document).ready(function(){
	  $('.gallery')._TMS({
		  show:0,
		  pauseOnHover:true,
		  prevBu:'.prev',
		  nextBu:'.next',
		  playBu:'.play',
		  duration:700,
		  preset:'fade',
		  pagination:$('.img-pags').uCarousel({show:4,shift:0}),
		  pagNums:false,
		  slideshow:7000,
		  numStatus:true,
		  banners:false,
		  waitBannerAnimation:false,
		  progressBar:false
	  })		
     })
  </script>
<div class="main">
<!--==============================content================================-->
    <section id="content">
        <div class="container_12">
          <div class="grid_12">
          	<div id="slide">			  	
                <div class="gallery">
                    <ul class="items">
                        <li><img src="layout/images/gallery-big-1.jpg" alt=""/></li>
                        <li><img src="layout/images/gallery-big-5.jpg" alt=""/></li>
                        <li><img src="layout/images/gallery-big-2.jpg" alt=""/></li>
                        <li><img src="layout/images/gallery-big-6.jpg" alt=""/></li>
                        <li><img src="layout/images/gallery-big-3.jpg" alt=""/></li>
                        <li><img src="layout/images/gallery-big-7.jpg" alt=""/></li>
                        <li><img src="layout/images/gallery-big-4.jpg" alt=""/></li>
                        <li><img src="layout/images/gallery-big-8.jpg" alt=""/></li>
                    </ul>
                </div>
                <a href="#" class="prev"></a><a href="#" class="next"></a>
            </div>		
          </div>
          <div class="grid_12 top-1">
            <div class="block-3 box-shadow">
           	  <h2 class="p4"><span class="color-1">Photo</span> gallery</h2>
                  <div class="pag">
                      <div class="img-pags">
                        <ul>
                          <li><a href="#"><span><img src="layout/images/gallery-1.jpg" alt=""/></span></a></li>
                          <li><a href="#"><span><img src="layout/images/gallery-5.jpg" alt=""/></span></a></li>
                          <li><a href="#"><span><img src="layout/images/gallery-2.jpg" alt=""/></span></a></li>
                          <li><a href="#"><span><img src="layout/images/gallery-6.jpg" alt=""/></span></a></li>
                          <li><a href="#"><span><img src="layout/images/gallery-3.jpg" alt=""/></span></a></li>
                          <li><a href="#"><span><img src="layout/images/gallery-7.jpg" alt=""/></span></a></li>
                          <li><a href="#"><span><img src="layout/images/gallery-4.jpg" alt=""/></span></a></li>
                          <li><a href="#"><span><img src="layout/images/gallery-8.jpg" alt=""/></span></a></li>
                        </ul>  
                      </div>								
                  </div>
            </div>
          </div>
          <div class="clear"></div>
        </div>
    </section>
</div>    

</html>